<%- include('../includes/head.ejs') %>
    <link rel="stylesheet" href="/css/forms.css">
    <link rel="stylesheet" href="/css/auth.css">
</head>

<body>
   <%- include('../includes/navigation.ejs') %>

    <main>
        <!-- Render the message incoming from connect-flash package -->
        <% if(errorMessage.length > 0) { %>
            <div class="user-message user-message__error">
                <%= errorMessage %>
            </div>
        <% } %>

        <% console.log(validationErrors) %>

        <form class="login-form" action="/signup" method="POST">
            <div class="form-control">
                <label for="email">E-Mail</label>
                <input class="<%= validationErrors.find(error => error.param === 'email') ? 'invalid' : '' %>" type="text" name="email" id="email" value="<%= oldInput.email %>">
            </div>
            <div class="form-control">
                <label for="password">Password</label>
                <input class="<%= validationErrors.find(error => error.param === 'password') ? 'invalid' : '' %>"  type="password" name="password" id="password" value="<%= oldInput.password %>" required>
            </div>
            <div class="form-control">
                <label for="confirmPassword">Confirm Password</label>
                <input class="<%= validationErrors.find(error => error.param === 'confirmPassword') ? 'invalid' : '' %>"  type="password" name="confirmPassword" id="confirmPassword" value="<%= oldInput.confirmPassword %>" required>
            </div>
            <input name="_csrf" type="hidden" value="<%= csrfToken %>">

            <button class="btn" type="submit">Signup</button>
        </form>
    </main>
<%- include('../includes/end.ejs') %>